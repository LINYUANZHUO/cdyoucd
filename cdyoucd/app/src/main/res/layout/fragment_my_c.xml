<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical"
	android:background="@android:color/white"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<androidx.appcompat.widget.Toolbar
		android:id="@+id/toolbar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="?attr/colorPrimary"
		android:minHeight="?attr/actionBarSize"
		android:theme="?attr/actionBarTheme" />

	<androidx.cardview.widget.CardView
		android:id="@+id/fragment_mydataImageView"
		app:cardCornerRadius="8dp"
		app:cardElevation="8dp"
		android:clickable="true"
		android:foreground="?attr/selectableItemBackground"
		app:cardUseCompatPadding="true"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<LinearLayout
			android:background="@color/xx"
			android:orientation="vertical"
			android:id="@+id/fragment_mydataLinearLayout"
			android:padding="6.0dip"
			android:layout_width="match_parent"
			android:layout_height="86.0dip">

			<LinearLayout
				android:gravity="center_vertical"
				android:orientation="horizontal"
				android:paddingLeft="30.0dip"
				android:paddingRight="30.0dip"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">

				<ImageView
					android:id="@+id/fragment_myImageView"
					android:layout_width="70.0dip"
					android:layout_height="70.0dip"
					android:src="@drawable/tx" />

				<TextView
					android:textSize="18.0sp"
					android:textColor="#ffffffff"
					android:id="@+id/fragment_mydataTextView"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="10.0dip"
					android:text="未登录"
					android:singleLine="true"
					android:layout_weight="1.0" />

				<Button
					android:textColor="@android:color/white"
					android:id="@+id/fragment_mydataButton"
					android:background="@drawable/button_circle"
					android:layout_width="65.0dip"
					android:layout_height="40.0dip"
					android:text="编辑资料" />
			</LinearLayout>
		</LinearLayout>
	</androidx.cardview.widget.CardView>
	<androidx.cardview.widget.CardView
		app:cardCornerRadius="8dp"
		app:cardElevation="8dp"
		android:clickable="true"
		android:foreground="?attr/selectableItemBackground"
		app:cardUseCompatPadding="true"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<LinearLayout
			android:background="@color/xx"
			android:orientation="vertical"
			android:id="@+id/fragment_mydataLinearLayout"
			android:padding="2.0dip"
			android:layout_width="match_parent"
			android:layout_height="60.0dip"
			tools:ignore="DuplicateIds">

			<LinearLayout
				android:orientation="horizontal"
				android:gravity="center_vertical"
				android:layout_marginTop="6dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<LinearLayout
					android:layout_weight="1"
					android:gravity="center"
					android:orientation="vertical"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content">

					<TextView
						android:textColor="#ffffffff"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="VIP"/>

					<TextView
						android:textColor="#ffffffff"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="未开发" />
				</LinearLayout>
				<LinearLayout
					android:layout_weight="1"
					android:gravity="center"
					android:orientation="vertical"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content">

					<TextView
						android:textColor="#ffffffff"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="积分"/>

					<TextView
						android:textColor="#ffffffff"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="未开发" />
				</LinearLayout>
				<LinearLayout
					android:layout_weight="1"
					android:gravity="center"
					android:orientation="vertical"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content">

					<TextView
						android:textColor="#ffffffff"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="卷轴"/>

					<TextView
						android:textColor="#ffffffff"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="未开发" />
				</LinearLayout>
				<LinearLayout
					android:layout_weight="1"
					android:gravity="center"
					android:orientation="vertical"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content">

					<TextView
						android:textColor="#ffffffff"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="推广"/>

					<TextView
						android:textColor="#ffffffff"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="未开发" />
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
	</androidx.cardview.widget.CardView>
	<include layout="@layout/fragment_my_c_main" />

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

	</RelativeLayout>

</LinearLayout>